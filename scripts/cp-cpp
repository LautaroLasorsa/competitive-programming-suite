if [ "$2" = "" ] || [ "$2" = "build" ]; then 
    g++ -Wall -Wextra -Wshadow -Wconversion -D_GLIBCXX_DEBUG -std=c++2a -g -ggdb3 -o $1 $1.cpp -DACMTUYO
fi 

if [ "$2" = "" ] || [ "$2" = "run" ]; then 
    cp $1.cpp $1.print; 
    for x in $1*.in; do 
        echo "$(tput setaf 2)ARCHIVO: $x" 
        echo "$(tput setaf 2)$(cat $x)"
        echo "$(tput sgr0)======"
        echo "$(tput setaf 1)$(./$1 < $x)$(tput sgr0)"
        echo "======"
    done | tee -a $1.print
fi
